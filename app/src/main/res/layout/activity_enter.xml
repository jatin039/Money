<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    tools:context="app.developer.jtsingla.money.EnterActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_enter"
        android:scaleType = "centerCrop"
        android:background="#DDAA00"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:id="@+id/inviting_text_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/intra_linearLayout_vertical_padding_enter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inviting_enter"
            android:textColor="@color/text_color_enter"
            android:textSize="@dimen/large_text_size_enter"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inviting_sub_enter"
            android:textColor="@color/text_color_enter"
            android:textSize="@dimen/large_text_size_enter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_info_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/intra_linearLayout_vertical_padding_enter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_logged_in_enter"
            android:textColor="@color/text_color_enter"
            android:textSize="@dimen/small_text_size_enter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_logged_in_sub_enter"
            android:textColor="@color/text_color_enter"
            android:textSize="@dimen/small_text_size_enter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/buttons_enter"
            android:visibility="visible"
            android:weightSum="3">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sign_up"
                android:layout_weight="1.5"
                android:text="@string/button_signUp_enter"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginRight="@dimen/button_margin_horizontal_enter"
                android:layout_marginEnd="@dimen/button_margin_horizontal_enter"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="log_in"
                android:layout_weight="1.5"
                android:layout_marginLeft="@dimen/button_margin_horizontal_enter"
                android:layout_marginStart="@dimen/button_margin_horizontal_enter"
                android:text="@string/button_logIn_enter"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.Button.Colored" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="start_earning"
                android:layout_weight="3"
                android:text="@string/button_start_enter"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:visibility="visible"
                android:layout_marginRight="@dimen/button_margin_horizontal_enter"
                android:layout_marginEnd="@dimen/button_margin_horizontal_enter"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/money_icon"
        android:contentDescription="@string/app_icon_description"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
